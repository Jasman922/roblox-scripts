})

Tab:AddButton({
	Name = "Click Gain OP",
	Callback = function()
      		while true do
	local args = {
 	   [1] = game:GetService("Players").LocalPlayer
	}
	
	game:GetService("ReplicatedStorage").Events.Clicks.clicked:FireServer(unpack(args))
	wait(0.000000000000000001)
end
  	end    
})

